<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <link rel="stylesheet" href="/styles.css">

</head>
<body>

<h1>My Blog</h1>

<a href="/new">Create New Post</a>

<% posts.forEach((post, index) => { %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>

    <a href="/edit/<%= index %>">Edit</a>
    <form action="/delete/<%= index %>" method="POST">
      <button type="submit">Delete</button>
    </form>
  </div>
<% }) %>

</body>
</html>
